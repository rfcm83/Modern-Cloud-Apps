<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta name="description" content="Contoso Sports League">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="~/favicon.ico" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <!--[if IE]>
        <link rel="shortcut icon" href="~/favicon.ico">
    <![endif]-->

    <title>@ViewBag.Title - Contoso Sports League</title>

    <link rel="stylesheet" href="~/css/vendor.css" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <!--[if lt IE 10]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="page_overlay">
        <div class="loader-inner ball-scale-multiple">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <div class="wrapper-body">
        <header class="s-header">
            <div class="header-top">
                <div class="container">
                    <div class="row">
                        <div class="header-top-left">
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                        </div>
                        <div class="header-top-right">
                            <a href="#" class="top-wrap"><span class="icon-phone">Call today: </span> (999) 777-8080</a>

                        </div>

                    </div>
                </div>
            </div> <!--  End of header top   -->
            <div class="menu">
                <div class="container">
                    <div class="row">
                        <div class="header-top-left">
                            <a href="@Url.Action("Index","Home")" class="logo">
                                <img src="@Url.Content("~/Images/logo.png")" alt="logo-image">
                            </a>
                        </div>
                        <div class="header-top-right">
                            <nav class="navbar">
                                <div class="nav-wrapper">
                                    <div class="navbar-header">
                                        <button type="button" class="navbar-toggle">
                                            <span class="sr-only">Toggle navigation</span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                        </button>
                                    </div>
                                    <div class="overlay"></div>
                                    <div class="nav-menu">
                                        <a href="#" class="close">
                                            <i class="fa fa-times"></i>
                                        </a>
                                        <ul class="nav navbar-nav menu-bar">
                                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                            <li><a href="#">League Members</a></li>
                                            <li><a href="#">Locations</a></li>
                                            <li class="dropdown">
                                                @Html.ActionLink("Store", "Index", "Store")
                                                <ul class="submenu">
                                                    <li>
                                                        @Html.ActionLink("Shopping Cart", "Index", "Cart")
                                                    </li>
                                                </ul>
                                            </li>
                                            <li><a href="#">Blog</a></li>
                                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                                            <li>
                                                <a href="#" class="search-box-tablet"><i class="fa fa-search"></i></a>
                                                <input type="text" placeholder="Search" class=" search-box-top">
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </nav>
                        </div>  <!-- End of header right -->
                    </div>
                </div>
            </div> <!-- End of menu -->
            @RenderSection("HeaderOverlay", required: false)

            @*Example HeaderOverlay section content:
                <div class="button-wrapper">
                    <div class="container">
                        <div class="row">
                            <a href="#" class="btn-content pull-right">Contoso Home</a>
                        </div>
                    </div>
                </div>*@
        </header>
        <!-- End of header -->
        @* The content within the RenderBody (views) should be wrapped in a <section> tag *@
        @RenderBody()

        <footer>
            <div class="container">
                <div class="row">
                    <div class="row left">
                        <div class="pages">
                            <h4>Pages</h4>
                            <ul>
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li><a href="#">League Members</a></li>
                                <li><a href="#">Locations</a></li>
                                <li>@Html.ActionLink("Store", "Index", "Store")</li>
                                <li><a href="#">Blog</a></li>
                                <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                            </ul>
                        </div>
                    </div>

                    <div class="row right">
                        <div class="contact">
                            <h4>Contact us</h4>
                            <p>7401 164th Ave NE<br />Redmond, WA 98052</p>
                            <p>Phone: (555) 555-8000<br />Mail: <a href="mailto:contact@contoso.com">contact@contoso.com</a></p>
                        </div>
                        <div class="recent">
                            <h4>Recent Blog Posts</h4>
                            <div class="figure row">
                                <div>
                                    <img src="@Url.Content("~/Images/photo/soccer.jpg")" alt="image">
                                </div>
                                <div class="figcaption">
                                    <h5 class="heading"><a href="#">New league sign-ups coming up</a></h5>
                                    <h5 class="date">July 7, 2015</h5>
                                    <p>Lorem Ipsum sit amit...</p>
                                </div>
                            </div>
                            <div class="figure row">
                                <div>
                                    <img src="@Url.Content("~/Images/photo/mens-volleyball.jpg")" height="73" width="83" alt="">
                                    >
                                </div>
                                <div class="figcaption">
                                    <h5 class="heading"><a href="">Store opening in Seattle</a></h5>
                                    <h5 class="date">June 29, 2015</h5>
                                    <p>Lorem Ipsum is the bomb...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <h6>&copy; @DateTime.Now.Year -  Contoso Sports League</h6>
            </div>
        </footer>
    </div>


    <script src="~/js/jquery-validate.js"></script>
    <script src="~/js/jquery-validate.unobtrusive.js"></script>
    <script src="~/js/vendor/modernizr.js"></script>
    <script src="~/js/vendor.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("scripts", required: false)

